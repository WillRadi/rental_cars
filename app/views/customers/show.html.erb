<h1><%= @customer.name %></h1>

<dl>
  <dt>Nome: </dt><dd><%= @customer.name %></dd>
  <dt>E-mail: </dt><dd><%= @customer.email %></dd>
  <dt>CPF: </dt><dd><%= @customer.document %></dd>
</dl>

<h2>Reservas<h2>
<% @customer.rentals.each do |rental| %>
  <dl>
    <dt>Código: </dt><dd><%= rental.code %><dd>
    <dt><%= t(:category, scope: %i[activerecord attributes car_category], name: rental.car_category.name) %></dt>
    <dt><%= link_to 'Iniciar Locação', start_rental_path(rental.id) %></dt>
  <dl>
<% end %>

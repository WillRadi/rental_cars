<h1>Fabricantes parceiros</h1>

<% if @manufacturers.any? %>
  <ul>
    <% @manufacturers.each do |manufacturer| %>
      <li>
        <%= link_to manufacturer.name, manufacturer %>
      </li>
    <% end %>
  </ul>
<% else %>
  <h5>Nenhum fabricante cadastrado</h5>
<% end %>

<%= link_to 'Voltar', root_path %>

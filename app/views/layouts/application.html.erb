<!DOCTYPE html>
<html>
  <head>
    <title>RentalCars</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
      <nav>
        <%= link_to 'Criar conta', new_client_path %>
        <%= link_to 'Fabricantes', manufacturers_path %>
        <%= link_to 'Filiais', subsidiaries_path %>
        <%= link_to 'Categorias de Carros', car_categories_path %>
        <%= link_to 'Modelos', car_models_path %>
        <%= link_to 'Locações', rentals_path %>
        <%= link_to 'Frota de veículos', cars_path %>
      </nav>
    <% else %>
      <%= link_to 'Entrar', new_user_session_path %>
    <% end %>
    <% #TODO: ver na doc do Devise como usaros helpers notice e alert %>
    <%= flash[:success] %>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
    <%= yield %>
  </body>
</html>
